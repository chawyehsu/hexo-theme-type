.site-sidebar {
  position: fixed;
  top: 0;
  right: 0;
  width: 280px;
  height: 100%;
  padding: 20px;
  background-image: url("../images/sidebar-bg.png");
  background-repeat: repeat;
  background-size: 102px 102px;
  overflow: hidden;
  transform: translate3d(280px, 0, 0);
  transition: all 0.24s ease;
  z-index: 1;

  // Common .dark-btn
  .dark-btn {
	display: inline-block;
	padding: 0px 15px;
	font-size: .8889rem;
	color: $tertiary-color;
	text-align: center;
	border: 1px solid black;
	background: rgba(0, 0, 0, 0.3);

	&:hover {
	  background-color: $highlight-color;
	}

	.icon {
	  margin-right: 5px;
	  font-size: 16px;
	  vertical-align: middle;
	  line-height: 40px;
	}

	.text {
	  vertical-align: middle;
	}
  }

  // Switch
  & > .sidebar-switch {		
	display: flex;
	flex-flow: row wrap;
	align-items: flex-start;
	justify-content: center;
	margin-bottom: 20px;
	opacity: 0;
	visibility: hidden;
	transition: all 0.24s ease;
	  
	&.show {
	  opacity: 1;
	  visibility: visible;
	}

	.dark-btn {
	  display: block;
	  width: 50%;
	  cursor: pointer;

		&.active {
		  background-color: $highlight-color;
		}

		&:first-child {
		  border-right: none;
		}

		.icon {
		  line-height: 30px;
		}

		.text {
		  line-height: 30px;
		}
	  }
	}

  // Toc
  & > .site-toc {
	position: relative;
	padding: 12px 10px 15px 10px;
	background: rgba(0,0,0,0.1);
	border: 1px solid lighten(black, 15%);
	max-height: 450px;
	overflow: auto;
	opacity: 0;
	transform: translate3d(0px, -20px, 0px);
	transition: all 0.24s ease;
		
	&.show {
	  transform: translate3d(0px, 0px, 0px);
	  opacity: 1;
	}

	& > ol {
	  margin: 0;
	  padding: 0;
	  list-style: none;

	  li {

		ol {
	  	  margin: 0;
		  padding: 0;
		  list-style: none;
		  padding-left: 15px;
		}

		a {
		  font-size: .8889rem;
		  color: $tertiary-color;
		  white-space: nowrap;
					
		  &:hover {
			color: $highlight-color;
		  }
		}
	  }
	}
  }

  // Bio
  & > .site-bio {
	position: relative;
	opacity: 0;
	transform: translate3d(0px, -20px, 0px);
	transition: all 0.24s ease;
	
	&.show {
	  opacity: 1;
	  transform: translate3d(0px, 0px, 0px);
	}
	
	.section {
	  margin: 15px auto;
	}

	.menu {
	  ul {
		margin: 0;
		padding: 0;
		width: 100%;
		list-style: none;
		display: flex;
		flex-flow: row wrap;
		align-items: flex-start;

		li {
		  width: 50%;
		  margin-bottom: 10px;

		  &:nth-child(odd) {
			padding-right: 5px;
		  }

		  &:nth-child(even) {
			padding-left: 5px;
		  }

		  a {
			display: block;
			padding: 5px 10px;
			text-overflow: ellipsis;
			white-space: nowrap;
			overflow: hidden;
		  }
		}
	  }
    }
  }

  .about-me {
	text-align: center;
	padding: 12px 5px 15px 5px;
	background: rgba(0,0,0,0.1);
	border: 1px solid lighten(black, 15%);
	transition: background 0.24s, border-color 0.24s;

	&:hover {
	  background: rgba(0,0,0,0.2);
	  border-color: lighten(black, 10%);
	}

	.avatar {
	  display: block;
	  width: 96px;
	  height: 96px;
	  margin: 4px auto;
	  background: rgba(0,0,0,0.3);
	  border-radius: 50%;
	  padding: 3px;
	  overflow: hidden;

	  img {
		display: block;
		width: 100%;
		height: 100%;
		border-radius: 50%;
	  }
	}
	
	.dark-btn {
	  padding: 5px 15px;
				
	  .icon {
		margin-right: 0px;
	  }
	}

	.info {
	  color: lighten(#8f8f8f, 10%);
	  margin-top: 10px;
	  line-height: 140%;
	  padding: 0px 15px;
	  font-size: .7778rem;
	}
  }

	// Shortcuts
  & > .shortcuts {
	display: block;
	position: absolute;
	width: 100%;
	left: 0;
	bottom: 20px;
	text-align: center;

	.dark-btn {
	  display: inline-block;
	  width: 36px;
	  height: 36px;
	  margin: 0 5px;
	  padding: 0;
	  cursor: pointer;

	  .icon {
		line-height: 34px;
		font-size: 14px;
		margin: 0;
		padding: 0;
	  }
	}
  }
}
