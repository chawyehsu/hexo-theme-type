.site-header {
  position: relative;
  width: 100%;
  margin-bottom: $gap-l;
  padding-top: $gap-l;

  span {
    display: block;
    width: 30px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    transition: all .24s;

    &.b {
      color: $primary-color-invert;
      background: $background-invert;

      &:hover {
        color: lighten($primary-color-invert, 80%);
        background: darken($background-invert, 80%);
      }
    }

    &.w {
      color: $primary-color;
      background: $background;
    }
  }

  // Switch button
  .site-nav-switch {
    position: absolute;
    top: $gap-l;
    right: 0;
    cursor: pointer;
    opacity: 1;
    visibility: visible;
    transition: all .24s;
    z-index: 65535;

    &:hover {
      color: inherit;
    }

    &.active {
      transform: rotate(90deg);
      opacity: 0;
      visibility: hidden;
      transition: all .24s;
    }
  }
}
