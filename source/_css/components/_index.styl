.post-list {
  padding: 0;

  .post-list-item {
    margin-bottom: $gap-l;
    list-style: none;

    .post-title {
      display: block;
      margin: 0;
    }

    .post-meta {
      display: block;
      font-family: $font-family-serif;
      font-style: italic;
      color: $secondary-color;
    }        
  }
}

.pagination {
  display: flex;
  justify-content: center;
  margin-bottom: $gap-l;

  a {
    display: block;
    padding: 0 $gap-l;
  }
}
