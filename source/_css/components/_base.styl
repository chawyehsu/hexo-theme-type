// Some resets
html {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

*, *::before, *::after {
  -webkit-box-sizing: inherit;
  box-sizing: inherit;
}

body, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6,
pre, code, form, fieldset, legend, input, textarea, p,
blockquote, th, td, hr, button, article, aside, details,
figcaption, figure, footer, header, menu, nav, section {
  margin: 0;
  padding: 0;
}

html {
  font: $font-size-base-s/$line-height-base $font-family-sans;
  color: $primary-color;
  text-size-adjust: 100%;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  font-feature-settings: "liga" 1, "onum" 1, "kern" 1;
  font-kerning: normal;

  @media (min-width: 30rem) {
    font-size: $font-size-base-m;
  }

  @media (min-width: 40rem) {
    font-size: $font-size-base-l;
  }
}

body {
  height: 100%;
  max-height: 100%;

  &.menu-open {
    #site-wrapper {
      transform: translate3d(-280px, 0, 0);

      .overlay {
        opacity: 1;
        visibility: visible;
      }
    }

    #site-sidebar {
      transform: translate3d(0, 0, 0);
    }
  }
}

// Content wrapper
.wrap {
  max-width: $content-wrap-wdith;
  margin: 0 auto;
}

// Typography
h1, .h1 { font-size: $font-size-h1; }
h2, .h2 { font-size: $font-size-h2; }
h3, .h3 { font-size: $font-size-h3; }
h4, .h4 { font-size: $font-size-h4; }
h5, .h5 { font-size: $font-size-h5; }
h6, .h6 { font-size: $font-size-h6; }

h1, h2, h3, h4, h5, h6 {
  margin-bottom: $gap-m;
}

h6 {
  color: $secondary-color;
}

small {
  font-size: $font-size-small;
}

p, blockquote, table,
hr, dl, ul, ol, pre,
address, figure {
  margin-bottom: $gap-l;
}

a {
  color: inherit;
  text-decoration: none;

  &:hover, &:focus {
      color: $highlight-color;
  }
}

// Loading bar
#loading-bar-wrapper {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  overflow: visible;
  z-index: 99;

  #loading-bar {
    position: relative;
    width: 0;
    height: 2px;
    background-color: $highlight-color;
    transition: all 0.5s ease-in-out;
  }
}

// Site Wrapper
.site-wrapper {
  padding: 0 $gap-l;
  position: relative;
  min-height: 100%;
  background: $background;
  overflow: hidden;
  transition: all 0.24s ease;
  z-index: 10;

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    content: "";
    opacity: 0;
    background-color: rgba(255, 255, 255, .5);
    transition: all 0.24s ease;
    visibility: hidden;
    z-index: 9999;
  }
}
