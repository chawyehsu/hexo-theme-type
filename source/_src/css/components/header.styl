.site-header
  align-items: center
  display: flex
  justify-content: space-between
  padding: $gap-l 0

  @media (min-width: 40rem)
    margin-bottom: $gap-l

  // Site Navigation
  .site-nav
    ul
      list-style: none
      margin-bottom: 0
      padding-left: 0

      li
        display: inline-block

        &+li
          margin-left: $gap-m

        a
          color: $meta-color
          text-decoration: none

          &.active
            color: $text-color
